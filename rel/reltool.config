{sys, [
       {lib_dirs, ["../apps", "../deps"]},
       {erts, [ {mod_cond, derived},
                {app_file, strip}]},
                %% {excl_lib, otp_root},
                {app_file, strip},
       {rel, "pasture", "1",
        [
         kernel,
         stdlib,
         sasl,
         gproc,
         goldrush,
         lager,
         ranch,
         cowlib,
         cowboy,
         nodes,
	     mnesia,
         pasture
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "pasture"},
       {profile, embedded},
       {incl_cond, derived},
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/(?!start_clean.boot)",
                           "^erts.*/bin/(dialyzer|typer)",
                           "^erts.*/(doc|info|include|lib|man|src)"]},
        {excl_app_filters, ["\.gitignore"]},
        {app, stdlib,   [{incl_cond, include}]},
        {app, kernel,   [{incl_cond, include}]},
        {app, sasl,     [{incl_cond, include}]},
        {app, hipe,     [{incl_cond, exclude}]},
        {app, gproc,    [{mod_cond, app}, {incl_cond, include}]},
        {app, goldrush, [{mod_cond, app}, {incl_cond, include}]},
        {app, lager,    [{mod_cond, app}, {incl_cond, include}]},
        {app, ranch,    [{mod_cond, app}, {incl_cond, include}]},
        {app, cowlib,   [{mod_cond, app}, {incl_cond, include}]},
        {app, cowboy,   [{mod_cond, app}, {incl_cond, include}]},
        {app, nodes,    [{mod_cond, app}, {incl_cond, include}]},
        {app, mnesia,   [{mod_cond, app}, {incl_cond, include}]},
        {app, pasture,  [{mod_cond, app}, {incl_cond, include}]}
      ]}.

{target_dir, "pasture"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "pasture/bin/start_clean.boot",
                  "\{\{erts_vsn\}\}/bin/start_clean.boot"},
           {copy, "files/pasture", "bin/pasture"},
           {copy, "files/pasture.cmd", "bin/pasture.cmd"},
           {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
           {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
           {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
           {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"}
          ]}.
